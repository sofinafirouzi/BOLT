#include <Servo.h>

Servo myservoBLL; 
Servo myservoBRL;
Servo myservoFLL; 
Servo myservoFRL; 
Servo myservoBLH; 
Servo myservoFLH; 
Servo myservoBRH; 
Servo myservoFRH; 
Servo myservoBLS; 
Servo myservoFLS; 
Servo myservoFRS; 
Servo myservoBRS; 

int pos = 0;    // variable to store the servo position
int buttonval = HIGH;
int buttonpin = 2;
int buttonval1 = HIGH;
int degreedelay = 75;

void setup() {
  myservoBLL.attach(45);
  myservoBRL.attach(51);
  myservoFLL.attach(47);
  myservoFRL.attach(49);
  myservoBLH.attach(39);
  myservoFLH.attach(37);
  myservoBRH.attach(43);
  myservoFRH.attach(41);
  myservoBLS.attach(31);
  myservoFLS.attach(9);
  myservoFRS.attach(35);
  myservoBRS.attach(33);
  pinMode(buttonpin, INPUT_PULLUP);
  Serial.begin(9600);
  myservoBLL.write(270);
  myservoBRL.write(0);
  myservoFLL.write(270);
  myservoFRL.write(0);
  myservoBLH.write(90);
  myservoFLH.write(90);
  myservoBRH.write(90);
  myservoFRH.write(90);
  myservoBLS.write(90);
  myservoFLS.write(90);
  myservoFRS.write(90);
  myservoBRS.write(90);
}

void loop() {
  buttonval = digitalRead(buttonpin);

  if (buttonval == LOW){
    Serial.println("Button Pressed");

    for (int x = 90; x < 140; x+=5){
     int y = x-85;
     if(y<40){
      myservoBLS.write(y);
      myservoFLS.write(y);
     }
     myservoBRS.write(x);
     myservoFRS.write(x);
     delay(degreedelay);
    }
    
   //for (int x = 5; x < 40; x+=5){
     // myservoBLS.write(x);
    //  myservoFLS.write(x);
    //   delay(degreedelay);
   // }
    
//
// for (int x = 5; x < 70; x+=5){
//       myservoBRL.write(x);
//       myservoFRL.write(x);
//        delay(degreedelay);
//    }
//    for (int x = 5; x < 110; x+=5){
//       myservoBLL.write(x);
//       myservoFLL.write(x);
//        delay(degreedelay);
//    }
//
//    delay(3000);
//    
//   for (int x = 5; x < 90; x+=5){
//       myservoBRS.write(x);
//       myservoFRS.write(x);
//        myservoBLS.write(x);
//       myservoFLS.write(x);
//        delay(degreedelay);
//       
//    } 
//     for (int x = 70; x > 0; x-=5){
//       myservoBRL.write(x);
//       myservoFRL.write(x);
//        delay(degreedelay);
//    }
// 
// 
//    for (int x = 5; x < 270; x+=5){
//       myservoBLL.write(x);
//       myservoFLL.write(x);
//        delay(degreedelay);
//    }
//    delay(3000);
  }
}
